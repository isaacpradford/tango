{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "module": "ESNext",
        "outDir": "dist",
        "target": "ES2019",
        "lib": ["ES2019", "DOM"],
        "isolatedModules": false,
        "noEmit": false,
        "esModuleInterop": true,
    },
    "include": [
        ".eslintrc.cjs",
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        "**/*.cjs",
        "**/*.js",
        ".next/types/**/*.ts"
      ],

}